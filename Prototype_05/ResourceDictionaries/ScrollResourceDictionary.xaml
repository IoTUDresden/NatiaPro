												<Custom:SurfaceRepeatButton x:Name="SliderDecrease"
													Margin="0,-1,0,-1"	
													Background="{TemplateBinding Background}"
													SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
