									IsDirectionReversed="False"/>
								<Canvas VerticalAlignment="Center" Margin="-1,-8,0,0">
									<Rectangle x:Name="PART_SelectionRange" 
										Fill="{DynamicResource {x:Static Custom:SurfaceColors.SliderRangeBrushKey}}"                                    
										Height="8"
										Visibility="Hidden"/>
								</Canvas>
            <!-- The Track lays out the repeat buttons and thumb -->
								<Track  x:Name="PART_Track" VerticalAlignment="Center" Margin="0,-1,0,0">
									<Track.DecreaseRepeatButton>
										<Custom:SurfaceRepeatButton x:Name="SliderDecrease"
											Margin="-1,0,-1,0"	
											Background="{TemplateBinding Background}"
											SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
											Style="{StaticResource SliderHorzDecreaseRepeatButtonStyle2}"
											Command="Slider.DecreaseLarge"/>
									</Track.DecreaseRepeatButton>
									<Track.IncreaseRepeatButton>
										<Custom:SurfaceRepeatButton x:Name="SliderIncrease" 
											Margin="-1,0,-1,0"
											Background="{TemplateBinding Background}"
											SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
											Style="{StaticResource SliderHorzIncreaseRepeatButtonStyle2}"
											Command="Slider.IncreaseLarge"/>
									</Track.IncreaseRepeatButton>
									<Track.Thumb>
										<Custom:SurfaceThumb  Style="{StaticResource SurfaceSliderHorzThumbStyle2}"
											Background="{TemplateBinding Background}"
											SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
											x:Name="Thumb" />
									</Track.Thumb>
								</Track>
							</Grid>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsSelectionRangeEnabled" 
								Value="True">
								<Setter Property="Visibility" 
									TargetName="PART_SelectionRange" 
									Value="Visible"/>
							</Trigger>
							<Trigger Property="TickPlacement"
								Value="TopLeft">
								<Setter Property="Visibility"
									Value="Visible"
									TargetName="TopTick"/>
							</Trigger>
							<Trigger Property="TickPlacement"
								Value="BottomRight">
								<!--<Setter Property="Visibility"
									Value="Visible"
									TargetName="BottomTick"/> -->
                            <Setter Property="Visibility"
									Value="Visible"
									TargetName="NumericBottomTick"/>
                        </Trigger>
							<Trigger Property="TickPlacement"
								Value="Both">
								<Setter Property="Visibility"
									Value="Visible"
									TargetName="TopTick"/>
								<!--<Setter Property="Visibility"
									Value="Visible"
									TargetName="BottomTick"/> -->
							</Trigger>
							<Trigger Property="IsEnabled"
								Value="False">
								<Setter Property="Opacity"  
									TargetName="SliderDecrease"                              
									Value="0.25"/>
								<Setter Property="Opacity"  
									TargetName="SliderIncrease"                              
									Value="0.5"/>
								<Setter Property="Opacity"  
									TargetName="TopTick"                              
									Value="0.25"/>
								<!-- <Setter Property="Opacity"  
									TargetName="BottomTick"                              
									Value="0.25"/> -->
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>

			<Style.Triggers>
    <!-- Vertical orientation -->
				<Trigger Property="Orientation"
					Value="Vertical">
					<Setter Property="Template">
						<!--Change the whole template-->
						<Setter.Value>
							<ControlTemplate TargetType="{x:Type Custom:SurfaceSlider}">
								<Grid x:Name="GridRoot"
									Background="{TemplateBinding Background}"
									HorizontalAlignment="Stretch"
									Width="Auto">
									<Grid Margin="0,16,0,16" HorizontalAlignment="Left" Width="28">
										<TickBar x:Name="TopTick"
											Visibility="Collapsed"
											Width="4"
											Placement="Left"
											Fill="{TemplateBinding BorderBrush}"
											ReservedSpace="0"
											HorizontalAlignment="Left"
											IsDirectionReversed="False"/>
										<TickBar x:Name="BottomTick"
											Visibility="Collapsed"
											Width="4"
											Placement="Right"
											Fill="{TemplateBinding BorderBrush}"
											ReservedSpace="0"
											HorizontalAlignment="Right"
											IsDirectionReversed="False"/>
										<Canvas HorizontalAlignment="Center" Margin="-8,1,0,0">
											<Rectangle x:Name="PART_SelectionRange"
												Fill="{DynamicResource {x:Static Custom:SurfaceColors.SliderTrackIncreaseBackgroundBrushKey}}"                                                
												Width="8"
												Visibility="Hidden"/>
										</Canvas>
                <!-- The Track lays out the repeat buttons and thumb -->
										<Track  x:Name="PART_Track" HorizontalAlignment="Center">
											<Track.DecreaseRepeatButton>
												<Custom:SurfaceRepeatButton x:Name="SliderDecrease"
													Margin="0,-1,0,-1"	
													Background="{TemplateBinding Background}"
													SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
													Style="{StaticResource SliderVertDecreaseRepeatButtonStyle2}"
													Command="Slider.DecreaseLarge"/>
											</Track.DecreaseRepeatButton>
											<Track.IncreaseRepeatButton>
												<Custom:SurfaceRepeatButton x:Name="SliderIncrease"
													Margin="0,-1,0,-1"	
													Background="{TemplateBinding Background}"
													SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
													Style="{StaticResource SliderVertIncreaseRepeatButtonStyle2}"
													Command="Slider.IncreaseLarge"/>
											</Track.IncreaseRepeatButton>
											<Track.Thumb>
												<Custom:SurfaceThumb  Style="{StaticResource SurfaceSliderVertThumbStyle2}"
													Background="{TemplateBinding Background}"
													SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
													x:Name="Thumb" />
											</Track.Thumb>
										</Track>
									</Grid>
									<Canvas ClipToBounds="False">
										<Label  x:Name="PART_SurfaceToolTip"
											Style="{StaticResource SliderToolTipStyle}"/>
									</Canvas>
								</Grid>
								<ControlTemplate.Triggers>
									<Trigger Property="IsSelectionRangeEnabled" 
										Value="True">
										<Setter Property="Visibility" 
											TargetName="PART_SelectionRange" 
											Value="Visible"/>
									</Trigger>
									<Trigger Property="TickPlacement"
										Value="TopLeft">
										<Setter Property="Visibility"
											Value="Visible"
											TargetName="TopTick"/>
									</Trigger>
									<Trigger Property="TickPlacement"
										Value="BottomRight">
										<Setter Property="Visibility"
											Value="Visible"
											TargetName="BottomTick"/>
									</Trigger>
									<Trigger Property="TickPlacement"
										Value="Both">
										<Setter Property="Visibility"
											Value="Visible"
											TargetName="TopTick"/>
										<Setter Property="Visibility"
											Value="Visible"
											TargetName="BottomTick"/>
									</Trigger>
									<Trigger Property="IsEnabled"
										Value="False">
										<Setter Property="Opacity"  
											TargetName="SliderDecrease"                              
											Value="0.25"/>
										<Setter Property="Opacity"  
											TargetName="SliderIncrease"                              
											Value="0.5"/>
										<Setter Property="Opacity"  
											TargetName="TopTick"                              
											Value="0.25"/>
										<Setter Property="Opacity"  
											TargetName="BottomTick"                              
											Value="0.25"/>
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>


</ResourceDictionary>